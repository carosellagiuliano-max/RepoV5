# Security Configuration
VITE_RATE_LIMIT_ENABLED=true
VITE_CORS_ORIGINS=http://localhost:5173,https://your-domain.netlify.app

# Business Configuration
VITE_DEFAULT_BOOKING_WINDOW_DAYS=30
VITE_DEFAULT_BUFFER_TIME_MINUTES=15
VITE_DEFAULT_CANCELLATION_HOURS=24
VITE_MAX_BOOKINGS_PER_DAY=50

# Media Configuration
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif,video/mp4,video/webm,video/quicktime
VITE_STORAGE_BUCKET_NAME=salon-media

# Supabase Storage Configuration (for Netlify Functions)
SUPABASE_STORAGE_BUCKET=salon-media

# Customer Management & GDPR Configuration
VITE_GDPR_RETENTION_DAYS=2555  # 7 years default retention
VITE_CUSTOMER_NUMBER_PREFIX=C  # Prefix for auto-generated customer numbers
VITE_AUDIT_LOG_RETENTION_DAYS=3650  # 10 years audit log retention

# Security Hardening Configuration
SECURITY_RATE_LIMIT_CUSTOMER_MAX=10  # Max requests per minute for customers
SECURITY_RATE_LIMIT_STAFF_MAX=50     # Max requests per minute for staff
SECURITY_RATE_LIMIT_ADMIN_MAX=100    # Max requests per minute for admins
SECURITY_RATE_LIMIT_WINDOW_SECONDS=60 # Rate limit window in seconds
SECURITY_IDEMPOTENCY_EXPIRATION_HOURS=24 # Idempotency key expiration time
SECURITY_AUDIT_LOG_ENABLED=true      # Enable comprehensive audit logging
SECURITY_CORRELATION_ID_ENABLED=true # Enable correlation ID tracking

# Data Retention Cleanup Schedule
DATA_RETENTION_CLEANUP_ENABLED=true  # Enable automated data retention cleanup
DATA_RETENTION_CLEANUP_HOUR=2        # Hour to run cleanup (0-23, UTC)
DATA_RETENTION_MANUAL_REVIEW_REQUIRED=true # Require manual review for sensitive data

# Advanced Security Features
SECURITY_ABUSE_DETECTION_ENABLED=true # Enable abuse detection
SECURITY_IP_WHITELIST=               # Comma-separated list of whitelisted IPs (optional)
SECURITY_SUSPICIOUS_ACTIVITY_THRESHOLD=50 # Threshold for suspicious activity alerts

# Development/Testing
NODE_ENV=development
VITE_APP_VERSION=1.0.0
VITE_DEBUG_MODE=false

# Analytics & Monitoring (optional)
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# i18n Configuration
VITE_DEFAULT_LOCALE=de
VITE_SUPPORTED_LOCALES=de,en

# PWA Configuration
VITE_PWA_NAME=Schnittwerk Your Style
VITE_PWA_SHORT_NAME=Schnittwerk
