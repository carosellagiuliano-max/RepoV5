# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (for Netlify Functions)
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Site Configuration
VITE_SITE_URL=http://localhost:5173
VITE_SITE_NAME=Schnittwerk Your Style
VITE_BUSINESS_NAME=Schnittwerk Your Style
VITE_BUSINESS_ADDRESS=Musterstra√üe 123, 12345 Musterstadt
VITE_BUSINESS_PHONE=+49 123 456789
VITE_BUSINESS_EMAIL=info@schnittwerk-your-style.de

# SMTP Configuration (for email notifications)
VITE_SMTP_HOST=
VITE_SMTP_PORT=587
VITE_SMTP_USER=
VITE_SMTP_PASSWORD=
VITE_SMTP_FROM_EMAIL=noreply@schnittwerk-your-style.de
VITE_SMTP_FROM_NAME=Schnittwerk Your Style

# JWT Configuration (for Netlify Functions)
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_EXPIRES_IN=24h

# Security Configuration
VITE_RATE_LIMIT_ENABLED=true
VITE_CORS_ORIGINS=http://localhost:5173,https://your-domain.netlify.app

# Business Configuration
VITE_DEFAULT_BOOKING_WINDOW_DAYS=30
VITE_DEFAULT_BUFFER_TIME_MINUTES=15
VITE_DEFAULT_CANCELLATION_HOURS=24
VITE_MAX_BOOKINGS_PER_DAY=50

# Media Configuration
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif,video/mp4,video/webm,video/quicktime
VITE_STORAGE_BUCKET_NAME=salon-media

# Supabase Storage Configuration (for Netlify Functions)
SUPABASE_STORAGE_BUCKET=salon-media

# Customer Management & GDPR Configuration
VITE_GDPR_RETENTION_DAYS=2555  # 7 years default retention
VITE_CUSTOMER_NUMBER_PREFIX=C  # Prefix for auto-generated customer numbers
VITE_AUDIT_LOG_RETENTION_DAYS=3650  # 10 years audit log retention

# Development/Testing
NODE_ENV=development
VITE_APP_VERSION=1.0.0
VITE_DEBUG_MODE=false

# Analytics & Monitoring (optional)
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# i18n Configuration
VITE_DEFAULT_LOCALE=de
VITE_SUPPORTED_LOCALES=de,en

# PWA Configuration
VITE_PWA_NAME=Schnittwerk Your Style
VITE_PWA_SHORT_NAME=Schnittwerk
VITE_PWA_DESCRIPTION=Professioneller Friseursalon - Online Terminbuchung

# Calendar Integration
CALENDAR_TOKEN_SECRET=your_calendar_token_secret_min_32_chars_change_in_production
CALENDAR_ENCRYPTION_KEY=your_encryption_key_for_google_tokens

# Google Calendar API (Optional - for Google Calendar sync)
GOOGLE_CALENDAR_CLIENT_ID=your_google_client_id
GOOGLE_CALENDAR_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALENDAR_REDIRECT_URI=https://your-domain.netlify.app/.netlify/functions/calendar/google/callback